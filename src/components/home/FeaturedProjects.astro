---
import { cn } from '../../utils';
import ProjectsGrid from "../ProjectsGrid.astro";
import { contributedProjects } from "../../data/projects";

const { class: className } = Astro.props;
---

<section class={cn(className, 'relative')}>
  <div class="mb-12 text-center">
    <h2 class="text-3xl md:text-4xl font-black mb-4">
      Featured <span class="text-transparent bg-clip-text bg-linear-to-r from-teal-400 to-emerald-500">Projects</span>
    </h2>
    <p class="text-base text-gray-400 max-w-xl mx-auto">
       A selection of my recent work.
    </p>
  </div>
  
  <div class="px-4 md:px-0">
    <ProjectsGrid projects={contributedProjects.slice(0, 3)} />
  </div>

  <div class="text-center mt-12">
    <a href="/projects" class="inline-flex items-center px-6 py-3 bg-gray-900 border border-gray-800 hover:border-teal-500/50 text-gray-300 hover:text-white rounded-lg transition-all duration-300 group">
      View all projects
      <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 ml-2 transform group-hover:translate-x-1 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
      </svg>
    </a>
  </div>
</section>
